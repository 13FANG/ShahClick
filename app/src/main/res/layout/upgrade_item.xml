<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/upgradeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/upgradeLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Level: 0"
        app:layout_constraintBaseline_toBaselineOf="@+id/upgradeNameTextView"
        app:layout_constraintStart_toEndOf="@+id/upgradeNameTextView" />

    <TextView
        android:id="@+id/upgradeCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="Cost: 10"
        app:layout_constraintEnd_toStartOf="@+id/buyUpgradeButton"
        app:layout_constraintTop_toTopOf="@+id/buyUpgradeButton" />

    <TextView
        android:id="@+id/upgradeInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1 per click"
        app:layout_constraintBottom_toBottomOf="@+id/buyUpgradeButton"
        app:layout_constraintEnd_toEndOf="@+id/upgradeCostTextView"
        app:layout_constraintTop_toBottomOf="@+id/upgradeCostTextView" />

    <Button
        android:id="@+id/buyUpgradeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>